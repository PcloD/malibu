@import "nib";

body {
	position: absolute;
	width: 100%;
	height: 100%;
	margin: 0px;
	overflow-x: hidden;
}

* {
	box-sizing: border-box;
}

ul {
	list-style-type: none;
	padding: 0;
	margin: 0;
}

clear() {
	display: block;
	content: ' ';
	clear: both;
}

.grid {

	width: 100%;
	height: 100%;

	.navigation {

		position: fixed;
		width: 100%;
		z-index: 200;

		.top {
			height: 40px;
			background-color: #fff;
		}

		.main {
			height: 80px;
			background-color: #666;
			box-shadow: 0 3px 5px rgba(#000, 0.2);
		}

	}

	.home {

		width: 100%;
		height: 100%;

		header {
			background-color: #aaa;
			margin-top: 120px;
			height: calc(100% - 180px);
			min-height: 500px;
		}

		.videos {

			width: 100%;

			.menu {
				height: 40px;
				background-color: #efefef;
			}

			.list {

				padding: 10px;
				overflow: auto;

				li {
					position: relative;
					float: left;
				}

				li:nth-of-type(5n-4), > li:nth-of-type(5n-3) {

					width: 100%;
					padding-bottom: (100/16*11)%;

					@media screen and (min-width: 700px) {
						width: 50%;
						padding-bottom: (50/16*11)%;
					}
				}

				li:nth-of-type(5n-2), > li:nth-of-type(5n-1), > li:nth-of-type(5n) {

					width: 100%;
					padding-bottom: (100/16*11)%;

					@media screen and (min-width: 700px) {
						width: 33.33333%;
						padding-bottom: (33.33333/16*11)%;
					}
				}

				clearfix();

			}

			.item {
				position: absolute;
				width: 100%;
				height: 100%;
				background-color: #888;
				border: 10px solid white;
			}

			.more {
				height: 40px;
				background-color: #efefef;
			}

		}

		.highlights {
			position: relative;
			height: 400px;

			li {
				position: absolute;
				height: 100%;
				width: 100%;
				float: left;
				background-color: #777;
			}
		}

		.channels {
			li {
				height: 300px;
				width: 33.33333%;
				float: left;
			}

			li:nth-of-type(1) { background-color: #bbb; }
			li:nth-of-type(2) { background-color: #ccc; }
			li:nth-of-type(3) { background-color: #ddd; }

			&:after { 
				clear(); 
			}
		}

		.feed {
			height: 120px;
			background-color: #fff;
		}

		.social-links {
			li {
				height: 120px;
				width: 33.33333%;
				float: left;
			}

			li:nth-of-type(1) { background-color: #bbb; }
			li:nth-of-type(2) { background-color: #ccc; }
			li:nth-of-type(3) { background-color: #ddd; }

			&:after { 
				clear(); 
			}
		}

		footer {
			height: 80px;
			background-color: #000;
		}
	}
}